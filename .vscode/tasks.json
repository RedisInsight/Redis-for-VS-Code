// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vite build",
      "type": "npm",
      "script": "dev",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": false,
          "beginsPattern": "build started...",
          "endsPattern": "^built in \\d+ms."
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["tsc watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "tsc watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    }
  ]
}
